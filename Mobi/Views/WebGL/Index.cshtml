@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Unity WebGL Player | 3DRoomDesign</title>
    <link rel="shortcut icon" href="~/WebGL/TemplateData/favicon.ico">
    <link rel="stylesheet" href="~/WebGL/TemplateData/style.css">
    <script src="~/WebGL/TemplateData/UnityProgress.js"></script>
    <script src="~/WebGL/Build/UnityLoader.js"></script>
    <script>
        var unityInstance = UnityLoader.instantiate("unityContainer", "../../wwwroot/WebGL/Build/WebGL.json", {onProgress: UnityProgress});

    </script>
</head>
<body>
    <div>
        <button onclick='unityInstance.SendMessage("JavascriptHook","SetUser",1)'>tıkla</button>
    </div>
    <p id="userId" hidden>alperen</p>
    <div class="webgl-content">

        <div id="unityContainer" style="width: 960px; height: 600px"></div>
        <div class="footer">
            <div class="webgl-logo"></div>
            <div class="fullscreen" onclick="unityInstance.SetFullscreen(1)"></div>
            <div class="title">3DRoomDesign</div>
        </div>

        <script>
             setTimeout(function () {
                unityInstance.SendMessage("JavascriptHook","SetUser",1);
            }, 3500);
        </script>
    </div>
</body>
</html>
