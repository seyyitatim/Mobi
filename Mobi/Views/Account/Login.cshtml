@model Mobi.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Login &mdash; Stisla</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/lib/stisla/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/stisla/modules/fontawesome/css/all.min.css">

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/lib/stisla/modules/bootstrap-social/bootstrap-social.css">

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/lib/stisla/css/style.css">
    <link rel="stylesheet" href="~/lib/stisla/css/components.css">
    <!-- Start GA -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-94034622-3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-94034622-3');
    </script>
    <!-- /END GA -->
</head>

<body>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        @*<div class="login-brand">
                            <img src="~/lib/stisla/img/stisla-fill.svg" alt="logo" width="100" class="shadow-light rounded-circle">
                            </div>*@
                        <div class="login-brand">
                        </div>

                        <div class="card card-primary">
                            <div class="card-header"><h4>Giriş Ekranı</h4></div>

                            <div class="card-body">
                                <form method="POST" asp-action="Login">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        <label asp-for="Email">Email</label>
                                        <input asp-for="Email" id="email" type="email" class="form-control" name="Email" tabindex="1" required autofocus>
                                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                                    </div>

                                    <div class="form-group">
                                        <div class="d-block">
                                            <label asp-for="Password" class="control-label">Şifre</label>
                                            @*<div class="float-right">
                                                <a href="auth-forgot-password.html" class="text-small">
                                                Şifremi Unuttum?
                                                </a>
                                                </div>*@
                                        </div>
                                        <input asp-for="Password" id="password" type="password" class="form-control" name="Password" tabindex="2" required>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                        <input type="checkbox" name="remember" class="custom-control-input" tabindex="3" id="remember-me">
                                        <label class="custom-control-label" for="remember-me">Remember Me</label>
                                        </div>
                                        </div>*@

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                            Giriş Yap
                                        </button>
                                    </div>
                                </form>
                                <div>
                                    <a class="btn btn-info" asp-action="Index" asp-controller="Home">Anasayfa</a>
                                </div>
                            </div>
                        </div>
                        <div class="mt-5 text-muted text-center">
                            Hesabınız yok mu? <a asp-action="SignIn" asp-controller="Account">Hemen Üye Ol</a>
                        </div>
                        <div class="simple-footer">
                            Copyright &copy; Mobi @DateTime.Now.Year
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- General JS Scripts -->
    <script src="~/lib/stisla/modules/jquery.min.js"></script>
    <script src="~/lib/stisla/modules/popper.js"></script>
    <script src="~/lib/stisla/modules/tooltip.js"></script>
    <script src="~/lib/stisla/modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/stisla/modules/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/lib/stisla/modules/moment.min.js"></script>
    <script src="~/lib/stisla/js/stisla.js"></script>

    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    <script src="~/lib/stisla/js/scripts.js"></script>
    <script src="~/lib/stisla/js/custom.js"></script>
</body>
</html>